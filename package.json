{
	"name": "@ton-ai-core/vibecode-linter",
	"version": "0.1.5",
	"description": "Advanced TypeScript linter with Git integration, dependency analysis, and comprehensive error reporting",
	"main": "dist/main.js",
	"bin": "dist/main.js",
	"type": "module",
	"files": [
		"dist",
		"README.md",
		"LICENSE"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/ton-ai-core/vibecode-linter.git"
	},
	"bugs": {
		"url": "https://github.com/ton-ai-core/vibecode-linter/issues"
	},
	"homepage": "https://github.com/ton-ai-core/vibecode-linter#readme",
	"scripts": {
		"build": "tsc",
		"release": "npm run build && npm run lint && npm version patch && npm publish --access public",
		"lint": "npx tsx src/main.ts src/"
	},
	"keywords": [
		"linter",
		"typescript",
		"eslint",
		"biome",
		"git-integration",
		"code-quality",
		"static-analysis",
		"dependency-analysis",
		"commit-history"
	],
	"author": "ton-ai-core",
	"license": "MIT",
	"publishConfig": {
		"access": "public"
	},
	"dependencies": {
		"@biomejs/biome": "2.2.4",
		"@eslint-community/eslint-plugin-eslint-comments": "^4.5.0",
		"@eslint/js": "^9.35.0",
		"@ton-ai-core/eslint-plugin-suggest-members": "^1.6.4",
		"@typescript-eslint/eslint-plugin": "^8.44.1",
		"@typescript-eslint/parser": "^8.44.1",
		"ajv": "^8.17.1",
		"eslint": "^9.36.0",
		"eslint-import-resolver-node": "^0.3.9",
		"eslint-import-resolver-typescript": "^4.4.4",
		"eslint-plugin-deprecation": "^3.0.0",
		"eslint-plugin-fp-ts-strict": "^0.1.1",
		"eslint-plugin-functional": "^9.0.2",
		"eslint-plugin-import-x": "^4.16.1",
		"eslint-plugin-jest": "^29.0.1",
		"eslint-plugin-jsdoc": "^59.1.0",
		"eslint-plugin-jsonc": "^2.20.1",
		"eslint-plugin-n": "^17.23.1",
		"eslint-plugin-perfectionist": "^4.15.0",
		"eslint-plugin-promise": "^7.2.1",
		"eslint-plugin-regexp": "^2.10.0",
		"eslint-plugin-simple-import-sort": "^12.1.1",
		"eslint-plugin-sonarjs": "^3.0.5",
		"eslint-plugin-sql": "^3.2.2",
		"eslint-plugin-sql-template": "^3.1.0",
		"eslint-plugin-sqlite": "^1.6.0",
		"eslint-plugin-typeorm-typescript": "^0.5.1",
		"eslint-plugin-unicorn": "^61.0.2",
		"eslint-plugin-unused-imports": "^4.2.0",
		"eslint-plugin-yml": "^1.18.0",
		"eslint-rule-docs": "^1.1.235",
		"globals": "^16.4.0",
		"jiti": "^2.5.1",
		"jscpd": "^3.5.10",
		"jscpd-sarif-reporter": "^4.0.3",
		"typescript": "^5.9.2",
		"typescript-eslint": "^8.44.0"
	},
	"devDependencies": {
		"@types/jest": "^30.0.0",
		"@types/js-yaml": "^4.0.9",
		"@types/node": "^24.5.2",
		"@types/node-fetch": "^2.6.4",
		"fast-check": "^4.3.0",
		"jest": "^30.1.3",
		"ts-jest": "^29.4.4",
		"tsx": "^4.19.1"
	},
	"engines": {
		"node": ">=18.0.0"
	},
	"jest": {
		"preset": "ts-jest",
		"testEnvironment": "node",
		"roots": [
			"<rootDir>/test"
		],
		"testMatch": [
			"**/__tests__/**/*.ts",
			"**/?(*.)+(spec|test).ts"
		],
		"transform": {
			"^.+\\.ts$": [
				"ts-jest",
				{
					"tsconfig": {
						"strict": true,
						"noImplicitAny": true,
						"strictNullChecks": true,
						"strictFunctionTypes": true
					}
				}
			]
		},
		"collectCoverageFrom": [
			"src/**/*.ts",
			"!src/**/*.test.ts",
			"!src/**/*.spec.ts",
			"!src/**/__tests__/**"
		],
		"coverageThreshold": {
			"global": {
				"branches": 80,
				"functions": 80,
				"lines": 80,
				"statements": 80
			}
		},
		"moduleNameMapper": {
			"^@/(.*)$": "<rootDir>/src/$1"
		},
		"clearMocks": true,
		"resetMocks": true,
		"restoreMocks": true
	}
}
