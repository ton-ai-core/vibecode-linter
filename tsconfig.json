{
	"compilerOptions": {
		// CHANGE: Strict type checking enabled
		// WHY: Required by .clinerules to avoid any/unknown
		// QUOTE(TЗ): "Никогда не использовать any, unknown"
		// REF: REQ-001
		"strict": true,
		"noImplicitAny": true,
		"strictNullChecks": true,
		"strictFunctionTypes": true,
		"strictBindCallApply": true,
		"strictPropertyInitialization": true,
		"noImplicitThis": true,
		"alwaysStrict": true,

		// Additional strict checks
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true,
		"noUncheckedIndexedAccess": true,
		"noImplicitOverride": true,
		"noPropertyAccessFromIndexSignature": true,
		"allowUnusedLabels": false,
		"allowUnreachableCode": false,

		// Module settings for Node.js ES Modules
		// CHANGE: Use NodeNext for proper ES Module resolution
		// WHY: Node.js ES Modules require .js extensions in imports
		// QUOTE(REVIEWER): "все относительные импорты должны содержать полное расширение файла"
		// REF: ERR_MODULE_NOT_FOUND issue
		"target": "ES2022",
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"resolveJsonModule": true,
		"isolatedModules": true,

		// Output settings
		"outDir": "./dist",
		"rootDir": "./src",
		"declaration": true,
		"declarationMap": true,
		"sourceMap": true,
		"removeComments": false,

		// Type checking
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,

		// Path mapping
		"baseUrl": ".",
		"paths": {
			"@/*": ["src/*"]
		}
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist", "test", "**/*.test.ts", "**/*.spec.ts"]
}
